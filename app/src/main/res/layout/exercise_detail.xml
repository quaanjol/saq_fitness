<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/exerciseImg"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profile_banner"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center_horizontal" />

                <Button
                    android:id="@+id/backBtn"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|left"
                    android:drawableLeft="@drawable/ic_arrow_back_black_24dp"
                    android:drawableTint="@color/white"
                    android:background="?android:attr/selectableItemBackground"
                    android:paddingHorizontal="10dp"
                    android:textSize="25sp"
                    android:textColor="#fff"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp" />

            </FrameLayout>

            <LinearLayout
                android:orientation="vertical"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/exerciseMusclePart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="3dp"
                    android:text="Chest"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_dark"/>

                <TextView
                    android:id="@+id/exerciseTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Pushup"
                    android:textSize="28sp"
                    android:textColor="@color/text_color"
                    android:textStyle="bold"/>

                <VideoView
                    android:id="@+id/exerciseVideo"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp" />

                <Button
                    android:text="Play tutorial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/playVideoBtn"
                    android:background="@color/warning"
                    android:paddingHorizontal="10dp"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Description"
                    android:textSize="22sp"
                    android:textColor="@color/text_color"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/exerciseDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"
                    android:lineHeight="30sp"
                    android:text="Description here"
                    android:textColor="@color/text_color_2"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Information"
                    android:textSize="22sp"
                    android:textColor="@color/text_color"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/exerciseCompactInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"
                    android:text="Information: \n "
                    android:lineHeight="30sp"
                    android:textColor="@color/text_color_2"/>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>