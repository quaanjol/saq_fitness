<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="50dp"
    android:background="@color/dark_hover">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp">

        <TextView
            android:id="@+id/currentTimeDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time done: 40s"
            android:textSize="20sp"
            android:textFontWeight="@android:integer/config_mediumAnimTime"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/currentPercentageDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="77.77%"
            android:textSize="10sp"
            android:textFontWeight="@android:integer/config_mediumAnimTime"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_alignParentRight="true"
            android:background="@drawable/percentage_circle"
            android:gravity="center"/>

    </RelativeLayout>



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="bottom|right">

        <Button
            android:text="Resume workout"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/resumeBtn"
            android:background="@drawable/button_success"
            android:layout_marginBottom="20dp"/>

        <Button
            android:text="Finish workout"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/finishBtn"
            android:background="@drawable/button_primary"
            android:layout_marginBottom="20dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="stop and discard"
            android:textColor="@color/white"
            android:background="@drawable/button_danger"
            android:id="@+id/discardBtn"/>

    </LinearLayout>

</LinearLayout>