<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="2"
    android:background="@color/white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:gravity="center">
        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/bg4_32"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:id="@+id/ivCover"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Changes start here"
            android:textSize="28sp"
            style="bold"
            android:id="@+id/tvTitle"
            android:gravity="center"
            android:textColor="@color/logo_color_clicked" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Give yourself a chance to be better"
            android:textSize="18sp"
            style="bold"
            android:id="@+id/tvMotivateText"
            android:gravity="center"
            android:textColor="@color/text_color_2" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="@color/dark"
            android:hint="Email"
            android:background="@drawable/main_input_style"/>

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:inputType="textPassword"
            android:textColor="@color/dark"
            android:padding="10dp"
            android:hint="Password"
            android:background="@drawable/main_input_style"/>

        <Button
            android:id="@+id/loginBtn"
            android:layout_height="wrap_content"
            android:layout_width="300dp"
            android:text="Login"
            android:textSize="20sp"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_primary"
            android:padding="10dp"/>

        <Button
            android:id="@+id/registerBtn"
            android:layout_height="wrap_content"
            android:layout_width="300dp"
            android:text="Register"
            android:textSize="20sp"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_success"
            android:padding="10dp"/>

    </LinearLayout>
</LinearLayout>