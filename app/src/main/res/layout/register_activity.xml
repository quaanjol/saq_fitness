<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingTop="30dp">

    <ScrollView android:id="@+id/ScrollViewID"
        android:layout_width="fill_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="30dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome to SAQ Community"
                android:textSize="28sp"
                style="bold"
                android:id="@+id/tvTitle"
                android:gravity="left"
                android:layout_marginLeft="30dp"
                android:textColor="@color/logo_color_clicked" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your personal information is safe with us"
                android:textSize="18sp"
                style="bold"
                android:id="@+id/tvMotivateText"
                android:gravity="left"
                android:layout_marginLeft="30dp"
                android:textColor="@color/text_color_2"
                android:layout_marginBottom="50dp"/>


            <!--  username  -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your name"
                android:textSize="18sp"
                style="bold"
                android:layout_marginLeft="30dp"
                android:textColor="@color/dark_hover" />

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:layout_marginHorizontal="30dp"
                android:layout_gravity="center"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="@color/dark"
                android:hint="Username"
                android:background="@drawable/main_input_style"/>

            <!--  email  -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your email"
                android:textSize="18sp"
                style="bold"
                android:layout_marginLeft="30dp"
                android:textColor="@color/dark_hover" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:layout_marginHorizontal="30dp"
                android:layout_gravity="center"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textColor="@color/dark"
                android:hint="Email address"
                android:background="@drawable/main_input_style"/>

            <!--  phone  -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your phone number"
                android:textSize="18sp"
                style="bold"
                android:layout_marginLeft="30dp"
                android:textColor="@color/dark_hover" />

            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:layout_marginHorizontal="30dp"
                android:layout_gravity="center"
                android:inputType="phone"
                android:padding="10dp"
                android:textColor="@color/dark"
                android:hint="Phone number"
                android:background="@drawable/main_input_style"/>

            <!--  age  -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Age"
                android:textSize="18sp"
                style="bold"
                android:layout_marginLeft="30dp"
                android:textColor="@color/dark_hover" />

            <EditText
                android:id="@+id/etAge"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:layout_marginHorizontal="30dp"
                android:layout_gravity="center"
                android:inputType="number"
                android:padding="10dp"
                android:textColor="@color/dark"
                android:hint="Eg: 24"
                android:background="@drawable/main_input_style"/>

            <!--  gender  -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textSize="18sp"
                style="bold"
                android:layout_marginLeft="30dp"
                android:textColor="@color/dark_hover" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_marginHorizontal="30dp"
                android:layout_height="50dp"
                android:id="@+id/spinnerGender"
                android:background="@drawable/main_input_style"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="10dp"/>

            <!--  weight  -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Weight (in kilograms)"
                android:textSize="18sp"
                style="bold"
                android:layout_marginLeft="30dp"
                android:textColor="@color/dark_hover" />

            <EditText
                android:id="@+id/etWeight"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:layout_marginHorizontal="30dp"
                android:layout_gravity="center"
                android:inputType="number"
                android:padding="10dp"
                android:textColor="@color/dark"
                android:hint="Eg: 69"
                android:background="@drawable/main_input_style"/>

            <!--  height  -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Height (in centimeters)"
                android:textSize="18sp"
                style="bold"
                android:layout_marginLeft="30dp"
                android:textColor="@color/dark_hover" />

            <EditText
                android:id="@+id/etHeight"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:layout_marginHorizontal="30dp"
                android:layout_gravity="center"
                android:inputType="number"
                android:padding="10dp"
                android:textColor="@color/dark"
                android:hint="Eg: 168"
                android:background="@drawable/main_input_style"/>

            <!--  training frequency  -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Training frequency"
                android:textSize="18sp"
                style="bold"
                android:layout_marginLeft="30dp"
                android:textColor="@color/dark_hover" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_marginHorizontal="30dp"
                android:layout_height="50dp"
                android:id="@+id/spinnerTrainingFrequency"
                android:background="@drawable/main_input_style"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="10dp"/>

            <!--  preferred training time  -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Preferred training time"
                android:textSize="18sp"
                style="bold"
                android:layout_marginLeft="30dp"
                android:textColor="@color/dark_hover" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_marginHorizontal="30dp"
                android:layout_height="50dp"
                android:id="@+id/spinnerPreferredTrainingTime"
                android:background="@drawable/main_input_style"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="10dp"/>

            <!--  password  -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textSize="18sp"
                style="bold"
                android:layout_marginLeft="30dp"
                android:textColor="@color/dark_hover" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:layout_marginHorizontal="30dp"
                android:layout_gravity="center"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="@color/dark"
                android:hint="**********"
                android:background="@drawable/main_input_style"/>

            <!--  confirm password  -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirm your password"
                android:textSize="18sp"
                style="bold"
                android:layout_marginLeft="30dp"
                android:textColor="@color/dark_hover" />

            <EditText
                android:id="@+id/etPassword2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:layout_marginHorizontal="30dp"
                android:layout_gravity="center"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="@color/dark"
                android:hint="**********"
                android:background="@drawable/main_input_style"/>

            <Button
                android:id="@+id/registerBtn"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="30dp"
                android:text="Register"
                android:textSize="20sp"
                android:textColor="#fff"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_primary"
                android:padding="10dp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>